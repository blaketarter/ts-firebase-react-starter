{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/**/*",
      "server/**/*",
      "build/**/*"
    ]
  },
  "rules": {
    "max-classes-per-file": [
      true,
      2
    ],
    "interface-name": [
      true,
      "never-prefix"
    ]
  }
}
